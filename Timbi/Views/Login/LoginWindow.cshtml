@model Login


<h1 align="center">Личный кабинет</h1>

<div align="center">

    <form asp-action="LoginWindow" method="post" class="form-horizontal">

        <div class="form-group">
            <label asp-for="LoginUser"></label>
            <div class="col-md-5">
                <input asp-for="LoginUser" class="form-control" />
                <span asp-validation-for="LoginUser" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <div class="col-md-5">
                <input asp-for="Password" class="form-control" required/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <br />

        <input class="btn btn-success" type="submit" value="Войти" />
    </form>

    <br />

</div>