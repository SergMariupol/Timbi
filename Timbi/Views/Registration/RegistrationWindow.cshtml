@model User


<h1 align="center">Регистрация</h1>

<div align="center">

    <form asp-action="RegistrationWindow" method="post" class="form-horizontal">

        <div class="form-group">
            <label asp-for="LoginUser"></label>
            <div class="col-md-5">
                <input asp-for="LoginUser" class="form-control" />
                <span asp-validation-for="LoginUser" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password1"></label>
            <div class="col-md-5">
                <input asp-for="Password1" class="form-control" required/>
                <span asp-validation-for="Password1" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password2"></label>
            <div class="col-md-5">
                <input asp-for="Password2" class="form-control" required/>
                <span asp-validation-for="Password2" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Mail"></label>
            <div class="col-md-5">
                <input asp-for="Mail" class="form-control" required/>
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Phone"></label>
            <div class="col-md-5">
                <input asp-for="Phone" class="form-control" required/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>

        <br />



        <input class="btn btn-success" type="submit" value="Зарегестрироваться" />

    </form>
    <p>

    </p>
    <br />

    <!--<a class="nav-link" asp-controller="Register" asp-action="RegisterWindowRegister">Войти / Создать учетную запись <span class="sr-only">(current)</span></a>-->



</div>