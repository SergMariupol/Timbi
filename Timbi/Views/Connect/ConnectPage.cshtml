@model UserAreaViewModel
<h1 align="center">Подключение</h1>
<br />
<br />


<form align="center" class="col-form-label" method="post" asp-controller="Connect" asp-action="ConnectPage">

    <div align="center" >

        <div class="row col-md-12">

            @*align="center"*@


            <div class="col - lg - 2" style="border: thin solid black">
                <br />
                <p>Регион</p>
                <select asp-for="RegionFact">
                    @foreach (Region Region in Model.Regions)
                    {
                        <option value="@Region.RegionCompany">@Region.RegionCompany</option>
                    }
                </select>
                <br />
                <br />

            </div>
            <div class="col - lg - 2" style="border: thin solid black">
                <br />
                <p>Статус</p>
                <p></p>
                @foreach (var status in Model.Status)
                {
                    <input type="radio" asp-for="StatusFact" value="@status" /> @status <span asp-validation-for="StatusFact"></span> <br />
                }
                <br />

            </div>
            <div class="col - lg - 2" style="border: thin solid black">
                <br />
                <p>Услуги</p>
                <p></p>
                @foreach (TypeService type in Model.TypeService)
                {
                    <input type="radio" asp-for="TypeServiceFact" value="@type.TypeServices" /> @type.TypeServices <span asp-validation-for="TypeServiceFact"></span> <br />

                }
                <br />

            </div>

            <br />
            <input type="submit" />
            <br />


        </div>
    </div>
</form>
